  <Panel Id="queryPanel" Name="queryPanel" Type="SingleRecord" Additional="{class:'ddz-maindiv',style:'margin-bottom: 20px;'}">
    <Row>
      <Control Name="PKId" Type="hidden" />
      <Control Name="ProductAmount" Type="hidden" />
