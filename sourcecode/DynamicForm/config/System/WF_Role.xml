    var p = "&RoleId=" + selections[0].RoleId;
    p += "&EditMode=Edit";
    var url = 'DFIndex.aspx?DF_FORMNAME=WF_Role_Edit' + p;
    var dialog = dfOverlayDialog(800, 400, '', url);
