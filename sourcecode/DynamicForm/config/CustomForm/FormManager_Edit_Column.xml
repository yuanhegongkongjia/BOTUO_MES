BUI.use(['bui/tree', 'bui/data'], function(Tree, Data) {
    var store = new Data.TreeStore({
        url: 'DFHandler.ashx?action=DynamicForm.DA.FormManager_EditDA.GetTree',
        proxy: {
            method: 'post'
        },
        dataProperty: 'rows',
        params: {
            DF_TREE_VIEWSTATE: '',
            FormName: $('#FormName').val()
        },
        autoLoad: true
    });

    var tree = new Tree.TreeList({
        render: '#Tree1',
        showLine: true,
        itemStatusFields: {
            disabled: 'disabled',
            selected: 'selected',
            expanded: 'expanded',
            checked: 'checked',
        },
        checkType: 'none',
        store: store
    });
tree.on('itemdblclick', function(e){
alert(e.item.text);
});
    tree.render();
});

$('form').submit(function() {
    saveState();
});

function saveState() {
    var grid = BUI.getControl('tree-list1');
    var items = grid.getItems();

    var p = $.map(items, function(a) {
        return {
            'id': a.id,
            'selected': a.selected,
            'expanded': a.expanded
        }
    });
    $('#DF_TREE_VIEWSTATE').val(StringUtil.Base64Encode(BUI.JSON.stringify(p)));
}
